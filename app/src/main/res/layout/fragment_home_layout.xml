<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fed952"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/qrcode_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bar_code_scan_icon"
            android:gravity="center" />

        <TextView

            android:id="@+id/category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/category" />

        <TextView
            android:id="@+id/home_search_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/category_view"
            android:layout_toRightOf="@id/qrcode_view"
            android:background="@drawable/home_edit_background"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/home_edit_text"
            android:textColor="@color/color_cdcdcd" />
    </RelativeLayout>
    <ImageView
        android:scaleType="center"
        android:src="@drawable/loading_data_anim"
        android:id="@+id/loading_view"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ListView
        android:id="@+id/content_listview"
        android:visibility="gone"
        android:alwaysDrawnWithCache="false"
        android:divider="@color/color_cccccc"
        android:dividerHeight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

</LinearLayout>